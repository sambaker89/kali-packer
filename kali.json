{
  "variables": {
    "vm_name": "kali-rolling",
    "qemu_binary": "/usr/bin/qemu-system-x86_64",
    "version": "0.0.0",
    "disk_size": "40960",
    "iso_checksum": "67574ee0039eaf4043a237e7c4b0eb432ca07ebf9c7b2dd0667e83bc3900b2cf",
    "iso_checksum_type": "sha256",
    "iso_url": "/mnt/samdisk/ISO.Dir/kali-linux-2019.2-amd64.iso",
    "dist_interface": "virto",
    "net_device": "virtio-net",
    "headless": "false",
    "config_file": "preseed_1.cfg",
    "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
    "guest_os_type": "debian7-64",
    "box_name" : "kali-linux-2.0-amd64-desktop.box",
    "box_desc" : "Kali Linux 2.0 64 Bit Desktop"
    },
  "description": "{{user `box_desc`}}",
  "_comments": "libvirt builder starts here",
  "builders": [
    {
      "type": "qemu",
      "output_directory": "box/kali-qemu-{{user `version`}}",

      "vm_name": "{{user `vm_name`}}.qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "disk_size": "{{user `disk_size`}}",
      "ssh_wait_timeout": "60m",

      "disk_size": "{{user `disk_size`}}",

      "headless": "{{ user `headless`}}",

      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "net_device": "{{ user `net_device` }}",
      "disk_interface": "{{ user `disk_interface` }}",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `config_file` }} <wait>",
	      "debian-installer=en_US <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us ",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait10><wait10><wait10>",
        "<enter><wait>"
        ],
      "qemuargs": [
           [ "-m", "1024m" ],
           [ "--cpu", "host" ],
           [ "--no-acpi", "" ],
           [ "-vga", "qxl" ]
      ]
    }

  ]

}
