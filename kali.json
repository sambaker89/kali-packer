{
  "variables": {
    "vm_name": "kali-desktop",
    "disk_size": "40960",
    "iso_checksum": "1327cc86c6020abe3cf61c465a51cc99f7b9828f485be23d573d797ee67a57fb",
    "iso_checksum_type": "sha256",
    "iso_url": "http://http.kali.org/kali/dists/kali-rolling/main/installer-amd64/current/images/netboot/mini.iso",
    "box_name" : "kali-linux-2.0-amd64-desktop.box",
    "box_desc" : "Kali Linux 2.0 64 Bit Desktop"
  },
  "description": "{{user `box_desc`}}",
  "builders": [
    {
      "type": "qemu",
      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "disk_size": "{{user `disk_size`}}",
      "ssh_wait_timeout": "60m",
      "shutdown_command": "",
      "disk_size": "{{user `disk_size`}}",
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "locale=en_US <wait>",
        "keymap=us <wait>",
        "<enter><wait>"
      ], "qemuargs": [
           [ "-m", "1024m" ],
           [ "--cpu", "host" ],
           [ "--no-acpi", "" ],
           [ "-vga", "qxl" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/kali/update.sh",
        "scripts/common/sshd.sh",
        "scripts/kali/networking.sh",
        "scripts/common/vagrant.sh",
        "scripts/kali/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "pause_before": "10s"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output" : "builds/{{user `box_name`}}",
      "only": ["qemu"]

    }
  ]
}
